<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RepositoryType>Github</RepositoryType>
    <RepositoryUrl>https://github.com/vivet/Vivet.AspNetCore.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/vivet/Vivet.AspNetCore</PackageProjectUrl>
    <PackageLicenseUrl></PackageLicenseUrl>
    <Product>AspNetCore RequestTimeZone</Product>
    <Authors>Michael Vivet</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Description>Configuration and middleware for handling request timezone.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningsAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <NoWarn />
    <DocumentationFile>bin\Release\netcoreapp2.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningsAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <NoWarn />
    <DocumentationFile>bin\Debug\netcoreapp2.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
  </ItemGroup>

</Project>
