<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RepositoryType>Github</RepositoryType>
    <RepositoryUrl>https://github.com/vivet/Vivet.AspNetCore.git</RepositoryUrl>
    <License>LICENSE</License>
    <Product>AspNetCore RequestTimeZone</Product>
    <Authors>Michael Vivet</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Description>Middleware for handling timezone in http requests. 
Similar implementation as Microsoft.AspNetCore.Localization.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>3.1.1.0</Version>
    <FileVersion>3.1.1.0</FileVersion>
    <AssemblyVersion>3.1.1.0</AssemblyVersion>
    <PackageTags>asp netcore http request timezone middleware</PackageTags>
    <PackageProjectUrl>https://github.com/vivet/Vivet.AspNetCore</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningsAsErrors />
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn />
    <DocumentationFile>bin\Release\netcoreapp3.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningsAsErrors />
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn />
    <DocumentationFile>bin\Debug\netcoreapp3.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.1.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
  </ItemGroup>
</Project>
