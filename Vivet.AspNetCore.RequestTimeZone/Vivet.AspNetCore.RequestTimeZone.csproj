<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RepositoryType>Github</RepositoryType>
    <RepositoryUrl>https://github.com/vivet/Vivet.AspNetCore.git</RepositoryUrl>
    <License>LICENSE</License>
    <Product>AspNetCore RequestTimeZone</Product>
    <Authors>Michael Vivet</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Description>Middleware for handling timezone in http requests. 
Similar implementation as Microsoft.AspNetCore.Localization.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>5.0.0.0</Version>
    <FileVersion>5.0.0.0</FileVersion>
    <AssemblyVersion>5.0.0.0</AssemblyVersion>
    <PackageTags>asp netcore http request timezone middleware</PackageTags>
    <PackageProjectUrl>https://github.com/vivet/Vivet.AspNetCore</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
	  <WarningsAsErrors />
	  <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
	  <NoWarn />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\net5.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\app5.0\Vivet.AspNetCore.RequestTimeZone.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.2" />
  </ItemGroup>
  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
  </ItemGroup>
</Project>
